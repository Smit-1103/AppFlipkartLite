<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    android:orientation="vertical"
    android:background="#8D72E1"
    android:padding="15dp"
    tools:context="AddGrocery">

    <ImageButton
        android:id="@+id/btback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:minWidth="48dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:layout_marginTop="30sp"
            android:textColor="#B9E0FF"
            android:layout_weight="1"
            android:text="Advance Food Point" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="350sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="#B9E0FF"
            app:cardCornerRadius="30dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvGroceryAddItem"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textAlignment="textStart"
                    android:fontFamily="sans-serif-black"
                    android:paddingBottom="20sp"
                    android:text="Add Grocery" />

                <EditText
                    android:id="@+id/etGroceryAdminAddName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Name"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="15sp"
                    tools:ignore="TouchTargetSizeCheck" />


                <EditText
                    android:id="@+id/etGroceryAdminAddPrice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Price"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="15sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/etGroceryAdminAddStock"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Stock"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="15sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/etGroceryAdminAddUnit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Unit"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="15sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/btGroceryAdminAddImage"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-black"
                    android:text="Add Image"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/btGroceryAdminAddItem"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="40sp"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-black"
                    android:text="Add Item"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <ImageView
        android:id="@+id/imgGrocery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />


</LinearLayout>